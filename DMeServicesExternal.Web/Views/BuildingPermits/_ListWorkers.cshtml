


<div class="box-inner">
    <div class="box-header well" data-original-title="">
        <h2><i class="glyphicon glyphicon-edit"></i> اسماء العمال</h2>
    </div>
    <div class="box-content">
        <!--item details-->
        <div class="">
            <table id="myTable" class=" table order-list">
                <thead>
                    <tr>
                        <td>اسم العامل</td>
                        <td>الرقم المدني</td>
                        <td>رقم الهاتف</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListOfWorkers != null)
                    {
                        int i = 0;
                        foreach (var item in Model.ListOfWorkers)
                        {
                    <tr>
                        <td class="col-sm-1" style="width:10%;">
                            @item.WorkerName

                        </td>
                        <td class="col-sm-1" style="width:25%;">
                            @item.WorkerID
                        </td>
                        <td class="col-sm-1" style="width:5%;">
                            @item.WorkerPhone
                        </td>


                        <td class="col-sm-1" style="width:20%;">
                            @using (Ajax.BeginForm("DeleteWorker", new { @controller = "IndustrialSurveys", @Id = i }, new AjaxOptions { UpdateTargetId = "divWorkers" }, new { @style = "display: inline-block;" }))
        {
                    <button type="submit" class="btn btn-danger" onclick="return confirm('هل انت متأكد من الحذف؟')">
                        <i class="fa fa-close"></i>&nbsp; حذف
                    </button>
}
                        </td>
                    </tr>
                            i++;
                        }

                    }

                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="10" style="text-align:center;"></td>
                    </tr>
                    <tr></tr>
                </tfoot>
            </table>
        </div>
        <!--end of item details-->
    </div>
</div>