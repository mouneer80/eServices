@model DMeServices.Models.ViewModels.Permits.PermitsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SubLayout.cshtml";
}

<ul class="breadcrumb">
    <li>
        <a href="@Url.Action("Index","Home")">الرئيسية</a>
    </li>
    <li>
        <a href="#">تراخيص البناء</a>
    </li>
</ul>

<div class="col-lg-12 col-sm-12">
    <a href="@Url.Action("NewPermits", new {@controller = "BuildingPermits"})" class="btn btn-primary ">
        <i class="glyphicon glyphicon-plus icon-white"></i> إضافة ترخيص جديد
    </a>
    <div class="row">
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2><i class="glyphicon glyphicon-road"></i> تراخيص البناء</h2>

                </div>
                <div class="box-content">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive ">
                        <thead>
                            <tr>
                                <th>رقم المعاملة</th>
                                <th>اسم المالك</th>
                                <th>الموقع</th>
                                <th>تاريخ الطلب</th>
                                <th>حالة الطلب</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListBuildingPermits)
                            {
                                <tr>
                                    <td class="center"> <a class="btn btn-primary modal-link" href="@Url.Action("PermitDetails", "BuildingPermits", new { @Id = item.Id })"> @item.TransactNo  </a> </td>
                                    @*<td class="center">@item.TransactNo</td>*@
                                    <td class="center">@item.OwnerName</td>
                                    <td class="center">@item.ConstructedArea</td>
                                    <td class="center">@item.RequestDate.ToShortDateString()</td>
                                    <td class="center" style="color:#2f9ce5;">@DMeServices.Models.Common.LookupsTypeCom.LookupByID((int)item.WorkflowStatus).LookupNameAr</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--/span-->
    </div>
</div>


