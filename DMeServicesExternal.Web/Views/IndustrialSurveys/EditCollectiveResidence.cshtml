@model DMeServices.Models.BuildingServices.LandSurvey

@{
    ViewBag.Title = "EditCollectiveResidence";
    Layout = "~/Views/Shared/_SubLayout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#details').hide();
        $('#ResidenceType').change(function () {
            var ddlValue = $(this).val();

            if (ddlValue == 0 || ddlValue == 1) {
                // show time div, hide fromTo div
                $('#details').hide();

            }
            else if (ddlValue == 2) {
                // show fromTo div, hide time div
                $('#details').show();

            }
        });
    });
</script>

