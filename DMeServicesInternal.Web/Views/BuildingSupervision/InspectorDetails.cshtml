<script>

    function onchangeevent(textBox) {
        var fileArray = $('#' + textBox.id)[0];
        $('#' + textBox.id + 'Loader').css("display", "block");

        var totalSize = 0;
        for (var i = 0; i < fileArray.files.length; i++) {
            var fileName = fileArray.files[i].name;
            if (fileName) { // returns true if the string is not empty
                var filesize = (fileArray.files[i].size);
                totalSize += filesize;
                //alert(fileize);
                var valid_extensions = /(\.JPG|\.JPEG|\.PDF|\.PNG|\.jpg|\.jpeg|\.pdf|\.png)$/i;
                if (valid_extensions.test(fileName)) {


                    $('#' + textBox.id + 'Loader').css("display", "block");

                }
                else {
                    $('#' + textBox.id + 'Span').css("display", "none");
                }
                // alert(fileName + " was selected");
            } else { // no file was selected

                $('#' + textBox.id + 'Span').css("display", "none");
                // alert("no file selected");
            }

        }
        if (totalSize <= 3000000) {
            $('#' + textBox.id + 'Loader').css("display", "none");
            $('#' + textBox.id + 'Span').css("display", "block");
        } else {

            $('#' + textBox.id + 'Span').css("display", "none");
            $('#' + textBox.id + 'Loader').css("display", "block");
            alert('حجم الملفات تجاوز حد 3 ميجا بايت المسموح به')
        }
    }
