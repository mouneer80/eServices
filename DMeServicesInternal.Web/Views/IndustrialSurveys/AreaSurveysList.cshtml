@model DMeServices.Models.ViewModels.Permits.AreaSurveysViewModel
    

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<ul class="breadcrumb">
    <li>
        <a href="@Url.Action("Index","Home")">الرئيسية</a>
    </li>
    <li>
        <a href="#">بيانات المناطق الصناعية والتجارية </a>
    </li>
</ul>

<div class="col-lg-12 col-sm-12">
    <a href="@Url.Action("NewAreaSurvey", new {@controller = "IndustrialSurveys"})" class="btn btn-primary ">
        <i class="glyphicon glyphicon-plus icon-white"></i> إضافة بيان جديد
    </a>
    <div class="row">
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2><i class="glyphicon glyphicon-road"></i> بيانات المناطق</h2>

                </div>
                <div class="box-content">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive ">
                        <thead>
                            <tr>
                                <th>
                                    رقم البيان
                                </th>
                                <th>
                                    اسم الولاية
                                </th>
                                <th>
                                    اسم القرية
                                </th>
                                <th>
                                    مربع رقم
                                </th>
                                <th>
                                    اسم المنطقة
                                </th>
                                <th>
                                    نوع الاستعمال
                                </th>                                
                                <th>
                                    عدد المباني
                                </th>
                                <th>
                                     عدد الشقق السكنية
                                </th>
                                <th>
                                    عدد المحلات التجارية
                                </th>
                                <th>
                                    عدد المحلات الصناعية
                                </th>
                                @*<th>
                                    ملاحظات
                                </th>*@
                                <th>

                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.TransactNo)
                                </th>*@
                                @*<th>
                                    @Html.DisplayNameFor(model => model.BldRegions)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BldWelyat)
                                </th>*@
                                @*<th></th>*@
                            </tr>
                            <tr>
                                <td>@Model.ListAreaSurveys.Select(m => m.TransactNo).Count()</td>
                                <td>@Model.ListAreaSurveys.Select(m => m.WelayahID).Distinct().Count()</td>
                                <td>@Model.ListAreaSurveys.Select(m => m.RegionID).Distinct().Count()</td>
                                <td>@Model.ListAreaSurveys.Select(m => m.SquareLetterID).Distinct().Count()</td>
                                <td>@Model.ListAreaSurveys.Select(m => m.RegionID).Count()</td>
                                <td>@Model.ListAreaSurveys.Select(m => m.UseTypeID).Distinct().Count()</td>
                                <td>@Model.ListAreaSurveys.Sum(m => m.BuildingsCount)</td>
                                <td>@Model.ListAreaSurveys.Sum(m => m.FlatsCount)</td>
                                <td>@Model.ListAreaSurveys.Sum(m => m.CommercialShopsCount)</td>
                                <td>@Model.ListAreaSurveys.Sum(m => m.IndustrialShopsCount)</td>
                                <td></td> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListAreaSurveys)
                            {
                                <tr>
                                    <td class="center"> <a class="btn btn-primary modal-link" href="@Url.Action("AreaSurveyDetails", "IndustrialSurveys", new { @Id = item.IndustrialSurveyID })"> @item.TransactNo  </a> </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BldWelyat.WelyahArName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BldRegions.RegionArName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BldSquareLetters.ArLetter)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RegionArName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BldLandUseTypes.UseType)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.BuildingTypeID)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BuildingsCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FlatsCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CommercialShopsCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IndustrialShopsCount)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedON)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.TransactNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BldRegions)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BldWelyat)
                                    </td>*@
                                    @*<td>
                                        @Html.ActionLink("تعديل", "Edit", new { id = item.SurveyID }) |
                                        @Html.ActionLink("تفاصيل", "Details", new { id = item.SurveyID }) |
                                        @Html.ActionLink("حذف", "Delete", new { id = item.SurveyID })
                                    </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div>
                        
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

