<div id="divMapAttachments">
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-edit"></i> الخرائط</h2>
        </div>
        <div class="box-content">
            <!--item details-->
            <div class="">
                <table id="myTable" class=" table order-list">
                    <thead>
                        <tr>
                            <td>نوع المرفق</td>
                            <td>الملاحظات</td>
                            <td>تاريخ الاضافة</td>
                            <td>وقت الاضافة</td>
                            <td>حالة الملف</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ListOfAttachments != null)
                        {

                            foreach (var item in Model.ListOfAttachments)
                            {
                                if (item.AttachmentTypeId > 3)
                                {
                                    <tr>
                                        <td class="col-sm-1" style="width:10%;">
                                            @DMeServices.Models.Common.BuildingServices.AttachmentTypesCom.TypeByID((int)@item.AttachmentTypeId).Name

                                        </td>
                                        <td class="col-sm-1" style="width:5%;">
                                            @item.Description
                                        </td>
                                        <td class="col-sm-1" unprintable>

                                            @item.InsertDate.ToShortDateString()

                                        </td>

                                        <td class="col-sm-1" unprintable>

                                            @item.InsertDate.ToShortTimeString()

                                        </td>

                                        @if (item.UpdatedOn != null)
                                        {
                                            <td class="col-sm-1" unprintable>   <p><font color="red">ملف سابق</font></p> </td>
                                        }
                                        else
                                        {
