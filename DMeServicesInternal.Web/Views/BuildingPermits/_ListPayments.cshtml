                                        }


                                        <td class="col-sm-1" unprintable>
                                            <a class="modal-link" href="@Url.Action("GetFile", new { @controller = "BuildingPermits", @Id = item.Id })">عرض الملف<i class="fa fa-eye-slash modal-link"></i></a>

                                        </td>
                                        @if (Model.oEmployeeInfo.IsEngineer == true)
                                        {
                                            <td class="col-sm-1" unprintable>
                                                @{

                                                    int ListDetails = DMeServices.Models.Common.BuildingServices.PermitsAttachmentsCom.AttachmentsDetailsByAttachmentsID((int)item.Id).Count();

                                                    if (item.UpdatedOn != null)
                                                    {
                                                        if (ListDetails > 0)
                                                        {
                                                            <a href="#" style="color:darkgreen" fileID="@item.Id" class="GetDetails">عرض تفاصيل الخريطة<i class="fa fa-eye-slash glyphicon glyphicon-collapse-down"></i></a>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <a class="modal-link" href="@Url.Action("EditPDFFile", new { @controller = "BuildingPermits", @Id = item.Id, @PirmID = Model.BuildingPermits.Id })">تعديل الملف<i class="fa fa-eye-slash"></i></a>
                                                        @*<a class="modal-link" href="@Url.Action("EditPDFFile", new { @controller = "BuildingPermits" })">تعديل الملف<i class="fa fa-eye-slash"></i></a>*@
                                                        }
                                                }

                                            </td>
                                            <td class="col-sm-1" unprintable>
                                                @if (item.UpdatedOn == null)
                                                {
                                                    if (ListDetails > 0)
                                                    {
                                                        <a href="#" fileID="@item.Id" class="GetDetails">عرض تفاصيل الخريطة<i class="fa fa-eye-slash glyphicon glyphicon-collapse-down"></i></a>
                                                    }
                                                }
                                            </td>




                                        }

                                    </tr>

                                }
                                //i++;
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="10" style="text-align:center;"></td>
                        </tr>
                        <tr></tr>
                    </tfoot>
                </table>
            </div>
            <!--end of item details-->
        </div>
    </div>
</div>
<br />
